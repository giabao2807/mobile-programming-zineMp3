<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.offline.activity.AddMyAlbum"
    android:padding="15dp"
    android:background="@drawable/background_scr">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cancelAddAlbum"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_close_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center_horizontal"
            android:text="Thêm Album"/>
        <ImageView
            android:id="@+id/DoneAddAlbum"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_done_24"/>

    </LinearLayout>
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/CornerImg"
        android:layout_marginTop="40dp"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_album"
        android:id="@+id/imgAlbum"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:layout_gravity="center_vertical"
            android:id="@+id/cameraAlbum"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_select_img_in_gallery"
            android:layout_gravity="center_vertical"
            android:id="@+id/galleryImgAlbum"/>
    </LinearLayout>

    <EditText
        android:id="@+id/inNameAlbum"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:backgroundTint="#D8D0E8"
        android:hint="Nhập tên Album"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="#D8D0E8"
        android:layout_width="330dp"
        android:layout_height="wrap_content"/>

</LinearLayout>