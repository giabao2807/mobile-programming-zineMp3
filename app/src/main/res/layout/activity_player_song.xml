<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_play"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_scr"
    tools:context=".view.offline.activity.PlayerSong">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/closePlayer"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_down"/>
        <TextView
            android:id="@+id/textPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐANG PHÁT"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/favBtn"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageSong"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_music"
        android:scaleType="centerCrop"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/songName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Song name"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/artistName"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textColor="@color/gray"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"/>
    <SeekBar
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:secondaryProgressTint="@color/colorBar"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeStart"
            android:text="0:00"
            android:textSize="13sp"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:id="@+id/timeEnd"
            android:text="5:00"
            android:textSize="13sp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/repeatBtn"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="25dp"
            android:layout_gravity="center_vertical"
            android:layout_height="25dp"
            android:src="@drawable/ic_repeat"/>
        <ImageView
            android:id="@+id/prevBtn"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:src="@drawable/icon_previous_skip"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/playBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_pause"/>
        <ImageView
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_vertical"
            android:id="@+id/nextBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next_skip"/>
        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/randomBtn"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="25dp"
            android:layout_gravity="center_vertical"
            android:layout_height="25dp"
            android:src="@drawable/ic_shuffle"/>
    </LinearLayout>


</LinearLayout>