<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scr"
    android:orientation="vertical"
    tools:context=".view.offline.activity.SelectAlbumToAddSong">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cancleSelectAlbum"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_close_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Album để thêm bài hát"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbarThumbVertical="@drawable/bg_scrollbar"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_select_album"
        android:scrollbars="vertical"
        android:scrollbarSize="7dp"/>


</LinearLayout>